{
  "version": 3,
  "configurePresets": [
    {
      "name": "dev",
      "displayName": "Development Build",
      "binaryDir": "${sourceDir}/build-Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "displayName": "Release Build",
      "binaryDir": "${sourceDir}/build-Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "conan-dev",
      "displayName": "Conan Development Build",
      "inherits": "dev",
      "cacheVariables": {
        "CMAKE_PROJECT_TOP_LEVEL_INCLUDES": "${sourceDir}/cmake/conan_provider.cmake",
        "CONAN_HOST_PROFILE": "${sourceDir}/cmake/conan-profile",
        "CONAN_INSTALL_ARGS": "--build=missing --settings build_type=Debug",
        "CMAKE_MAP_IMPORTED_CONFIG_DEBUG": "RelWithDebInfo;Release;Debug;"
      }
    },
    {
      "name": "conan-release",
      "displayName": "Conan Release Build",
      "inherits": "release",
      "cacheVariables": {
        "CMAKE_PROJECT_TOP_LEVEL_INCLUDES": "${sourceDir}/cmake/conan_provider.cmake",
        "CONAN_HOST_PROFILE": "${sourceDir}/cmake/conan-profile",
        "CONAN_INSTALL_ARGS": "--build=missing --settings build_type=Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev",
      "displayName": "Build Development",
      "configurePreset": "dev"
    },
    {
      "name": "release",
      "displayName": "Build Release",
      "configurePreset": "release"
    },
    {
      "name": "conan-dev",
      "displayName": "Build Conan Development",
      "configurePreset": "conan-dev"
    },
    {
      "name": "conan-release",
      "displayName": "Build Conan Release",
      "configurePreset": "conan-release"
    },
    {
      "name": "format",
      "displayName": "Format Code",
      "configurePreset": "dev",
      "targets": ["format"]
    },
    {
      "name": "regenerate-fixtures",
      "displayName": "Regenerate Fixtures",
      "configurePreset": "dev",
      "targets": ["regenerate-fixtures"]
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "displayName": "Run All Tests",
      "configurePreset": "dev",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    }
  ]
}
